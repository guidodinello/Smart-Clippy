{
    "manifest_version": 2,
    "name": "YouTube Link Copier",
    "version": "1.0",
    "description": "Copies YouTube video title and URL to clipboard in the markdown hyperlink style.",
    "permissions": ["activeTab", "clipboardWrite"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/watch*",
                "*://www.youtube.com/shorts/*"
            ],
            "js": ["content.js"]
        }
    ]
}
